<!DOCTYPE html>
<html>
<head>
  <title>Insta100</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if current_user %>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <% if current_user %>

          <%= link_to(image_tag(current_user.prof_pic, size: "36x36", id: "dontskip", class: "img-circle"), "https://instagram.com/#{current_user.name}/")%>

        <% end %>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li id="insta"><h4 style="font-family: Georgia, Serif">Insta33</h4></li>
        </ul>
        <div class="navbar-form navbar-left" role="search">
          <%= form_tag root_path do %>
            <div class="form-group">
              <%= text_field_tag :search %>
            </div>
            <div class= "form-group">
              <%= select_tag(:search_type, options_for_select([['Tag', 1],['Location', 2]]), {class: 'form-control'}) %>
            </div>

            <%= submit_tag "Search", class:"btn btn-default"%>

          <% end %>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Fun Zone<span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li> <%= link_to "Narcissism Feed", "/?"+{search_type:"3"}.to_param, method: :post %></li>
              <li><%= link_to "Liked Feed", "/?"+{search_type:"4"}.to_param, method: :post %></a></li>
              <li><a href="#">Something else here</a></li>
              <li class="divider"></li>
              <li><a href="#">Separated link</a></li>
            </ul>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
<% end %>
<%= yield %>

</body>
</html>
